<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.menu {
			width: 200px;
			height: 300px;
		}
		
		.menuPanel {
			width: 100%;
		}
		
		.menuView {
			height: 300px;
		}
	</ui:style>

	<g:HTMLPanel ui:field='menuView' styleName='{style.menuView}'>
		<g:StackLayoutPanel unit='PX' width='100%' height='100%'>
			<g:stack>
				<g:header size='30'>
					Manage Projects
				</g:header>
				<g:VerticalPanel styleName='{style.menuPanel}'>
					<g:Button ui:field='manageProjectsButton'>Manage Projects</g:Button>
				</g:VerticalPanel>
			</g:stack>

			<g:stack>
				<g:header size='30'>
					Manage Todo's
				</g:header>
				<g:VerticalPanel styleName='{style.menuPanel}'>
					<g:Label>Add Todo</g:Label>
					<g:Label>Show Todo's</g:Label>
				</g:VerticalPanel>
			</g:stack>
		</g:StackLayoutPanel>

	</g:HTMLPanel>
</ui:UiBinder>