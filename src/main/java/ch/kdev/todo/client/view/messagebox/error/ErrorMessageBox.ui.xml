<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			background-color: ivory;
			height: 200px;
			width: 350px;
		}
		
		.style.title {
			font-weight: bold;
		}
	</ui:style>

	<g:DialogBox ui:field="dialogBox" autoHideEnabled="true">
		<g:DockPanel width="400px" height="180px">
			<g:Dock direction="SOUTH">
				<g:Button ui:field="okButton">OK</g:Button>
			</g:Dock>
			<g:Dock direction="CENTER">
				<g:TextBox width="285px" height="111px"/>
			</g:Dock>
		</g:DockPanel>
	</g:DialogBox>
