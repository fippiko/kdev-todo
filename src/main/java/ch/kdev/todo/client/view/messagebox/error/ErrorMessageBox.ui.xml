<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
			background-color: ivory;
			
			height:200px;
			width:350px;
		}
		
		.style.title {
			font-weight: bold;
		}
	</ui:style>

	<g:AbsolutePanel styleName="{style.panel}">
		<g:at left="10" top="10">
			<g:Label text="Shame on me! An error occured..." width="219px"
				height="24px" styleName="{style.title}" />
		</g:at>
		<g:at left="255" top="166">
			<g:Button width="88px" height="24px" ui:field="okButton" text="OK" />
		</g:at>
		<g:at left="10" top="166">
			<g:Button width="88px" height="24px" text="Help" />
		</g:at>
		<g:at left="10" top="39">
			<g:Label width="88px" height="24px" text="Description:" />
		</g:at>
		<g:at left="10" top="58">
			<g:TextBox width="321px" height="90px" readOnly="true"
				ui:field="descriptionTextBox" />
		</g:at>
	</g:AbsolutePanel>
</ui:UiBinder>