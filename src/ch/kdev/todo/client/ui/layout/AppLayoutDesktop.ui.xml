<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:my='urn:import:ch.kdev.todo.client.ui.mainmenu'>

	<ui:style>
		.mainPanel {
			width:800px;
			height: 600px;
			margin-left:auto;
			margin-right:auto;
		}
		
		.headerPanel {
			height: 50px;
			width: 798px;
			border: 1px solid gray;
		}
	
		.menuPanel {
			border: 1px solid gray;
		}
		
		.contentPanel {
			border: 1px solid gray;
		}
		
		.footerPanel {
			border: 1px solid gray;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' addStyleNames='{style.mainPanel}'>
		<g:north size='50'>
			<g:SimplePanel ui:field="headerPanel" addStyleNames="{style.headerPanel}" />
		</g:north>
		<g:west size='250'>
			<g:SimplePanel ui:field="menuPanel" addStyleNames="{style.menuPanel}">
				<my:MainMenuViewDesktop ui:field="mainMenu" />
			</g:SimplePanel>
		</g:west>
		<g:center>
			<g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}" />
		</g:center>
		<g:south size='40'>
			<g:SimplePanel ui:field="footerPanel" addStyleNames="{style.footerPanel}" />
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>